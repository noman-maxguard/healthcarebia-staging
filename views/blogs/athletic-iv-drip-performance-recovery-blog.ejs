          <table class="table table-bordered">
            <thead>
              <tr>
                <th>Example Runner</th>
                <th>Before</th>
                <th>After (60 min)</th>
                <th>Loss</th>
                <th>Recommended Replacement</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>Case A</td>
                <td>72.0 kg</td>
